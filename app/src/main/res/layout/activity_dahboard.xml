<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    tools:context=".ui.activity.DashboardActivity">

    <Button
        android:id="@+id/btnTraceFlight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/trace_with_backend_instrumented"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btnTraceMarvelApi"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnTraceMarvelApi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/trace_without_backend_instrumented"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btnTraceFlight" />
</androidx.constraintlayout.widget.ConstraintLayout>